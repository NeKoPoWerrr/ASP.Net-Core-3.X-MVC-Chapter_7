@model IEnumerable<Chapter_7.Models.Student>

@{
    int topId = Convert.ToInt32(ViewData["TopId"]);
}
@section topCss{ 
<style type="text/css">
    th{
        color:white;
        background-color:black;
        text-align:center;
    }
    .table > tbody tr:hover{
        background-color:antiquewhite !important;
    }
    .poor{
        color:white  !important;
        background-color:red !important;
    }
    .excellent {
        background-color:aqua !important;
    }
    .top1 {
        background-color: yellow !important; 
        border:2px dashed black !important;
        font-weight:900;
        font-size:1.2rem;
    }
    .top1::after{
        content:'總得分第一';
    }
</style>
}
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Id)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Chinese)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.English)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Math)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var m in Model)
{
    var total = m.Chinese + m.English + m.Math;
        <tr>
            <td>
                @Html.DisplayFor(x => m.Id)
            </td>
            <td>
                @Html.DisplayFor(x => m.Name)
            </td>
            @{
                if (m.Chinese < 60)
                {
                    <td class="poor">@Html.DisplayFor(x => m.Chinese)</td>
                }
                else if (m.Chinese > 90)
                {
                    <td class="excellent">@Html.DisplayFor(x => m.Chinese)</td>
                }
                else
                {
                    <td class="excellent">@Html.DisplayFor(x => m.Chinese)</td>
                }
            }
            @{
                if (m.English < 60)
                {
                    <td class="poor">@Html.DisplayFor(x => m.English)</td>
                }
                else if (m.English > 90)
                {
                    <td class="excellent">@Html.DisplayFor(x => m.English)</td>
                }
                else
                {
                    <td class="excellent">@Html.DisplayFor(x => m.English)</td>
                }
            }
            @{
                if (m.Math < 60)
                {
                    <td class="poor">@Html.DisplayFor(x => m.Math)</td>
                }
                else if (m.English > 90)
                {
                    <td class="excellent">@Html.DisplayFor(x => m.Math)</td>
                }
                else
                {
                    <td class="excellent">@Html.DisplayFor(x => m.Math)</td>
                }
            }
            @{
                if (m.Id == topId)
                {
                    <td class="top1">@Html.DisplayFor(x => m.Total)</td>
                }
                else
                {
                    <td>@Html.DisplayFor(x => m.Total)</td>
                }
            }
        </tr>
         }
    </tbody>
</table>
